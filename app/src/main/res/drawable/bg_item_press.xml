<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="@color/bg_white_normal" />
            <stroke android:width="0.5dp" android:color="@color/press_divider_grey" />
        </shape>
    </item>

    <item android:state_pressed="true">

        <shape>
            <corners android:radius="5dp" />
            <solid android:color="@color/bg_white_pressed" />
            <stroke android:width="0.5dp" android:color="@color/press_divider_grey" />
        </shape>
    </item>

</selector>